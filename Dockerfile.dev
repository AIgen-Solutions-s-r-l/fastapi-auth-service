FROM python:3.11-slim

# Install poetry
RUN pip install poetry

# Set the working directory
WORKDIR /app

# Copy the Poetry configuration files
COPY pyproject.toml /app/

# Configure Poetry to not create a virtual environment
RUN poetry config virtualenvs.create false

# Generate lock file and install dependencies
RUN poetry lock && poetry install --no-root

# Copy the application code
COPY ./app /app/app
COPY ./alembic.ini /app/
COPY ./alembic /app/alembic/
COPY ./run_api_server.py /app/

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    # Use host.docker.internal to connect to services on the host machine
    DATABASE_URL="postgresql+asyncpg://testuser:testpassword@host.docker.internal:5432/main_db" \
    # Development-specific settings
    DEBUG=true \
    # Frontend URL for development
    FRONTEND_URL="http://localhost:3000" \
    # Stripe configuration
    STRIPE_SECRET_KEY="sk_test_REMOVED" \
    STRIPE_WEBHOOK_SECRET="whsec_REMOVED_secret" \
    STRIPE_API_VERSION="2023-10-16" \
    # Set host to 0.0.0.0 to make the server accessible outside the container
    HOST="0.0.0.0" \
    PORT="8001"

# Expose the port
EXPOSE 8001

# Run with hot reload for development
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8001", "--reload"]